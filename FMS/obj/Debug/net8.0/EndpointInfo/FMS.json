          "fullName",
          "password",
          "role",
          "station"
        ],
        "type": "object",
        "properties": {
          "fullName": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "employeeNumber": {
            "maxLength": 20,
            "minLength": 3,
            "type": "string"
          },
          "role": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
          },
          "station": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ForgotPasswordRequest": {
        "required": [
          "employeeNumber"
        ],
        "type": "object",
        "properties": {
          "employeeNumber": {
            "maxLength": 20,
            "minLength": 3,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LedgerCode": {
        "required": [
          "category",
          "code",
          "description"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "code": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
